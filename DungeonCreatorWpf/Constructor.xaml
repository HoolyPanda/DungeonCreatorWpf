            <ListBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.375"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ListBox.RenderTransform>
        </ListBox>
        <Button Content="Описание" HorizontalAlignment="Left" Margin="231,239,0,0" VerticalAlignment="Top" Width="95" RenderTransformOrigin="0.713,0.585"/>
        <Button Content="Последствия" HorizontalAlignment="Left" Margin="231,264,0,0" VerticalAlignment="Top" Width="95" RenderTransformOrigin="0.713,0.585"/>
        <Button Click="Save"   Content="Сохранить" Margin="0,0,19,10" RenderTransformOrigin="1.308,11.316" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="95"/>
        <Button Name="EncounterName" Click="EncounterName_Click" Content="Имя" HorizontalAlignment="Left" Margin="82,264,0,0" VerticalAlignment="Top" Width="95" RenderTransformOrigin="0.713,0.585"/>
        <TextBox Name="MainData" Margin="387,10,10,35" TextWrapping="Wrap" Text="Start Typing"/>

    </Grid>
</Window>
